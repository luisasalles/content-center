<div class="container">
        <h3 class="pag-title">CURSOS</h3>
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">

                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"><img src="{{course.image}}" /></div>
                            <div class="tab-pane" id="pic-2"><img src="{{course.image}}" /></div>
                            <div class="tab-pane" id="pic-3"><img src="{{course.image}}" /></div>
                            <div class="tab-pane" id="pic-4"><img src="{{course.image}}" /></div>
                            <div class="tab-pane" id="pic-5"><img src="{{course.image}}" /></div>
                        </div>

                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">{{course.name}}</h3>
                        <p class="product-description">{{course.description}}</p>
                        <h5 class="product-teacher">{{course.teacher}}</h5>
                        <h4 class="price">Pre√ßo: <span>R$ {{course.price}}</span></h4>
                        <div class="action">
                            <a href="/add/{{course.type}}/{{course.id}}" class="round-black-btn" id="btn-cart">Adicionar ao Carrinho</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>